
@model saglik_sen.Models.KURUMLAR
@{
    ViewBag.Title = "guncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card shadow mb-4" style="width:100%;">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Kurum Güncelle</h6>
    </div>
    <div class="card-body">

        <form class="form-group" method="post">
            <div class="form-group" hidden>

                @Html.TextBoxFor(x => x.KURUM_ID, new { @class = "form-control" })

            </div>
            <div class="form-group">
                <b>Kurum Adı</b>

                @Html.TextBoxFor(x => x.KURUM, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.KURUM, "", new { @style = "color:red" })

            </div>
            <div class="form-group"><button class="btn btn-primary">Güncelle</button></div>

        </form>


    </div>

